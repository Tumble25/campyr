<h1>'Create a new listing'</h1>
<%= simple_form_for([@user, @campsite]) do |f| %>
  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :description%>
    <%= f.input :address %>
    <%= f.input :price %>

    <%= f.input :photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

