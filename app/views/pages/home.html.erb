  <div>
    <%= link_to root_path do %>
    <%= image_tag('logo-camping.png') %>
    <% end %>
  </div>
  <!-- <div class="header-logo">
    <h1 class="text-align-left">Campyr</h1>
  </div> -->
  <div>
    <%= render "partials/navbar"%>
  </div>
</div>

<!-- banner  -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= image_path 'background.jpg' %>');">

  <div class="search-form">
    <div class="row justify-content-center pt-3">
      <div class="col-sm-10">
        <h2 class="mb-4 text-align-center">Search your next trip</h2>
        <!-- <form> -->
          <div class="form-row">
            <div class="col-sm-10">
              <label>Where do you want to camp?</label>


              <!-- simple-form -->
              <%= simple_form_for :query, method: :get, url: campsites_path do |f| %>
              <%= f.input :city, label: false,
              class: "form-control",
                placeholder: "City"
                %>
              </div>
            </div>
            <div class="form-row">
              <div class="col-sm-10 form-group">
                <label>Check in</label>
                <input type="date" class="form-control" placeholder="date">
              </div>
            </div>
            <div class="form-row">
              <div class="col-sm-10 form-group">
                <label>Check out</label>
                <input type="date" class="form-control" placeholder="date">
              </div>
            </div>
            <!-- drop down -->
            <div class="form-row">
              <div class="col-sm-10 form-group">
                <label for="exampleFormControlSelect1">How many people?</label>
                <select class="form-control" id="exampleFormControlSelect1">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                </select>
              </div>
            </div>
            <div class="form-row">
              <%= f.button :submit, 'search campsites', :class => "btn btn-warning font-weight-bold col-sm-10 form-group p-3"  %>
              <% end %>
            </div>
            <!-- </form> -->
          </div>
        </div>
      </div>
    </div>

  <!-- footer  -->
    <div class="footer">
      <!-- <p>Follow us</p> -->
      <div class="footer-links">
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
      </div>
    </div>

